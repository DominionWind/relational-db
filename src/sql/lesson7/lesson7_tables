CREATE TABLE SALESMAN(
SALESMAN_ID NUMBER PRIMARY KEY ,
NAME NVARCHAR2(50) NOT NULL ,
CITY NVARCHAR2(50) NOT NULL ,
COMMISSION NUMBER (*,2) DEFAULT '0,1'
);

