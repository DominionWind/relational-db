-------------------------------------------------
SELECT CUSTOMER.CUSTNAME, SALESMAN.NAME
FROM CUSTOMER, SALESMAN
WHERE CUSTOMER.SALESMAN_ID = SALESMAN.SALESMAN_ID;

SELECT CUSTOMER.CUSTNAME, SALESMAN.NAME
FROM CUSTOMER
JOIN SALESMAN ON CUSTOMER.SALESMAN_ID = SALESMAN.SALESMAN_ID;
-------------------------------------------------


SELECT CUSTOMER.CUSTNAME, SALESMAN.NAME, CUSTOMER.CITY
FROM CUSTOMER
JOIN SALESMAN ON CUSTOMER.CITY = SALESMAN.CITY;

SELECT CUSTOMER.CUSTNAME, SALESMAN.NAME, CUSTOMER.CITY
FROM CUSTOMER, SALESMAN
WHERE CUSTOMER.CITY = SALESMAN.CITY;
-------------------------------------------------


-------------------------------------------------

SELECT CUSTOMER.CUSTNAME, CUSTOMER.CITY, SALESMAN.NAME, SALESMAN.CITY
FROM CUSTOMER
JOIN SALESMAN ON CUSTOMER.SALESMAN_ID = SALESMAN.SALESMAN_ID
JOIN DEAL ON CUSTOMER.CUSTOMER_ID = DEAL.CUSTOMER_ID WHERE DEAL.AMOUNT > 10000;

SELECT CUSTOMER.CUSTNAME, CUSTOMER.CITY, SALESMAN.NAME, SALESMAN.CITY
FROM CUSTOMER, SALESMAN, DEAL
WHERE CUSTOMER.SALESMAN_ID = SALESMAN.SALESMAN_ID AND CUSTOMER.CUSTOMER_ID = DEAL.CUSTOMER_ID AND DEAL.AMOUNT > 10000;
----------------

SELECT CUSTOMER.CUSTNAME
FROM CUSTOMER
JOIN DEAL ON CUSTOMER.CUSTOMER_ID = DEAL.CUSTOMER_ID AND DEAL.DATE_DEAL > '31.12.2016' AND DEAL.DATE_DEAL < '01.01.2019';

SELECT SALENAME,SALEDEAL
FROM
(SELECT SALESMAN.NAME AS SALENAME, SUM (DEAL.AMOUNT) AS SALEDEAL
FROM SALESMAN
JOIN CUSTOMER ON CUSTOMER.SALESMAN_ID = SALESMAN.SALESMAN_ID
JOIN DEAL ON CUSTOMER.CUSTOMER_ID = DEAL.CUSTOMER_ID
WHERE DEAL.DATE_DEAL > '31.07.2017' AND DEAL.DATE_DEAL < '01.09.2017'
GROUP BY SALESMAN.NAME)
WHERE SALEDEAL =
(SELECT MAX (SALEDEAL) FROM
(SELECT SALESMAN.NAME AS SALENAME, SUM (DEAL.AMOUNT) AS SALEDEAL
FROM SALESMAN
JOIN CUSTOMER ON CUSTOMER.SALESMAN_ID = SALESMAN.SALESMAN_ID
JOIN DEAL ON CUSTOMER.CUSTOMER_ID = DEAL.CUSTOMER_ID
WHERE DEAL.DATE_DEAL > '31.07.2017' AND DEAL.DATE_DEAL < '01.09.2017'
GROUP BY SALESMAN.NAME));


WITH Tablica AS
(SELECT SALESMAN.NAME AS SALENAME, SUM(DEAL.AMOUNT) AS SALEDEAL
FROM CUSTOMER
JOIN SALESMAN ON CUSTOMER.SALESMAN_ID = SALESMAN.SALESMAN_ID
JOIN DEAL ON CUSTOMER.CUSTOMER_ID = DEAL.CUSTOMER_ID
WHERE DEAL.DATE_DEAL >= '01.08.2017' AND DEAL.DATE_DEAL <= '31.08.2017'
GROUP BY SALESMAN.NAME)
SELECT SALENAME FROM Tablica
WHERE SUM = (SELECT MAX(SUM) FROM Tablica);



