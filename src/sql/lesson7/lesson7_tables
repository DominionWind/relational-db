CREATE TABLE DEAL(
CUSTOMER_ID NUMBER,
CONSTRAINT CUSTOMER_ID_FK FOREIGN KEY (CUSTOMER_ID) REFERENCES CUSTOMER (CUSTOMER_ID),
AMOUNT NUMBER NOT NULL,
DATE_DEAL TIMESTAMP NOT NULL
);

